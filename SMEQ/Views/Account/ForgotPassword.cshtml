@model ChatBox.Models.ForgotPasswordViewModel
@using Store.Web.Infrastructure.ExtensionMethod
@{
    ViewBag.Title = "Forgot your password?";
}
<div>
    <a class="hiddenanchor" id="signin"></a>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <section id="loginForm">


                 @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                 {
                    @Html.AntiForgeryToken()
                    <h4>Enter your email.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control",@placeholder = Html.DisplayPlaceHolderFor(x=>x.Email)})
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="clearfix">
                            <input type="submit" class="btn btn-default submit" value="Khôi phục mật khẩu" />
                        </div>
                    
                    </div>
                 }
                </section>

                <div class="clearfix"></div>
                <div class="separator">
                    <div>
                        <i class="fa fa-paw"></i> TABWEB!
                        <p>©2017 All Rights Reserved</p>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
