@model ChatBox.Models.SetPasswordViewModel
@using Store.Web.Infrastructure.ExtensionMethod
@{
    ViewBag.Title = "Create Password";
}


<div>
    <a class="hiddenanchor" id="signin"></a>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <section id="loginForm">

                    @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <h4>Tạo mật khẩu</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                      
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" , @placeholder = Html.DisplayPlaceHolderFor(x => x.NewPassword) })
                            </div>
                        </div>
                        <div class="form-group">
             
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = Html.DisplayPlaceHolderFor(x => x.ConfirmPassword) })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="clearfix">
                                <input type="submit" class="btn btn-default submit" value="Enter" />
                            </div>
                        </div>
                    }






                </section>

                <div class="clearfix"></div>
                <div class="separator">
                    <div>
                        <i class="fa fa-paw"></i> TABWEB!
                        <p>©2017 All Rights Reserved</p>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}